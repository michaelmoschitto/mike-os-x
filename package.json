{
  "name": "mike-os-x",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "rip": "bun --cwd apps/web dev",
    "dev": "docker compose -f docker-compose.dev.yml up",
    "dev:build": "bun run build:terminal && docker compose -f docker-compose.dev.yml up --build",
    "down": "docker compose -f docker-compose.dev.yml down",
    "logs": "docker compose -f docker-compose.dev.yml logs -f",
    "build:terminal": "docker build -f apps/api/terminal.Dockerfile -t terminal-ubuntu:latest apps/api",
    "build": "bun --cwd apps/web build",
    "preview": "bun --cwd apps/web preview",
    "test:api": "cd apps/api && uv run pytest",
    "format:api": "cd apps/api && uv format",
    "type-check:api": "cd apps/api && uv run mypy ."
  },
  "devDependencies": {
    "typescript": "^5.6.2"
  }
}
